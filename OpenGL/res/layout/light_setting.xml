<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_marginTop="42dp"
    tools:context="${relativePackage}.${activityClass}" >

    <CheckBox
        android:id="@+id/enableAmibentLighting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_light" 
        />
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/global_ambients"
        />
    <include layout="@layout/seekbar"
        android:id="@+id/globalAmbientR"/>
    <include layout="@layout/seekbar"
        android:id="@+id/globalAmbientG"/>
    <include layout="@layout/seekbar"
        android:id="@+id/globalAmbientB"/>
    <include layout="@layout/seekbar"
        android:id="@+id/globalAmbientA"/>
    
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/material"
        />
    <include layout="@layout/seekbar"
        android:id="@+id/materialR"/>
    <include layout="@layout/seekbar"
        android:id="@+id/materialG"/>
    <include layout="@layout/seekbar"
        android:id="@+id/materialB"/>
    <include layout="@layout/seekbar"
        android:id="@+id/materialA"/>
    
     <CheckBox
        android:id="@+id/enableColorTrack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/enable_color_track" 
        />
      <include layout="@layout/seekbar"
        android:id="@+id/colorTrackR"/>
    <include layout="@layout/seekbar"
        android:id="@+id/colorTrackG"/>
    <include layout="@layout/seekbar"
        android:id="@+id/colorTrackB"/>
    <include layout="@layout/seekbar"
        android:id="@+id/colorTrackA"/>
</LinearLayout>
